[alias]
	l = !git --no-pager log --oneline -n 15
	st = status
[commit]
	gpgsign = true
[core]
	excludesfile = ~/.gitignore
	editor = hx
	pager = delta
[init]
	defaultBranch = main
[pull]
	rebase = true
[merge]
	conflictStyle = zdiff3
[delta]
	side-by-side = true
	syntax-theme = Coldark-Dark
[interactive]
	diffFilter = delta --color-only
